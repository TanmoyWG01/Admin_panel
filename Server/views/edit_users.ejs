<%- include("layouts/header") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center bg-success">
          <h3>Edit User (<%= user.name %>)</h3>
        </div>
        <div class="card-body">
          <form action="/update/<%= user._id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name" class="form-label">Name:</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Enter your name"
                value="<%= user.name %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email:</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Enter your email"
                value="<%= user.email %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone:</label>
              <input
                type="number"
                class="form-control"
                id="phone"
                name="phone"
                placeholder="Enter your phone number"
                value="<%= user.phone %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Select Image:</label>
              <input
                type="file"
                class="form-control"
                id="image"
                name="image"
              />
              <img src="/<%= user.image %>" alt="" width="100" class="img-thumbnail mt-1">
            </div>
            <input type="hidden" name="old_image" value="<%= user.image %>">
            <div class="text-center">
              <button type="submit" name="submit" value="Update User" class="btn btn-success w-100">
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("layouts/footer") %>
